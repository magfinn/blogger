<div class="card">
  <div class="card-header">
    <a class="link" href="/post/{{id}}">{{title}}</a></h4>
  </div>
  <div class='card-content'>
    {{content}}
  </div>
  <div class="card-footer">
    <p>Posted by {{user.username}} on {{format_date created_at}}</p>
    <button type='submit' class='btn' id='edit'>Edit</button>
    <button type='submit' class='btn' id='delete'>Delete</button>
  </div>
</div>

<script src="javascript/edit-post.js"></script>
<script src='javascript/delete-post.js'></script>